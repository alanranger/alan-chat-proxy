{
  "$id": "https://alanranger.com/schemas/event.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["@context", "@type", "name", "startDate", "location", "offers"],
  "properties": {
    "@context": { "$ref": "jsonld-shared.defs.json#/definitions/Context" },
    "@type": { "const": "Event" },
    "name": { "$ref": "jsonld-shared.defs.json#/definitions/Text" },
    "url": { "$ref": "jsonld-shared.defs.json#/definitions/URL" },
    "image": {
      "oneOf": [
        { "$ref": "jsonld-shared.defs.json#/definitions/URL" },
        {
          "type": "array",
          "items": { "$ref": "jsonld-shared.defs.json#/definitions/URL" },
          "minItems": 1
        }
      ]
    },
    "description": { "type": "string" },
    "startDate": { "$ref": "jsonld-shared.defs.json#/definitions/DateTime" },
    "endDate": { "$ref": "jsonld-shared.defs.json#/definitions/DateTime" },
    "organizer": {
      "type": "object",
      "required": ["@type", "name"],
      "properties": {
        "@type": { "const": "Organization" },
        "name": { "$ref": "jsonld-shared.defs.json#/definitions/Text" },
        "url": { "$ref": "jsonld-shared.defs.json#/definitions/URL" },
        "logo": { "$ref": "jsonld-shared.defs.json#/definitions/URL" },
        "address": { "type": "string" }
      },
      "additionalProperties": true
    },
    "location": {
      "type": "object",
      "required": ["@type", "name"],
      "properties": {
        "@type": { "enum": ["Place", "VirtualLocation"] },
        "name": { "$ref": "jsonld-shared.defs.json#/definitions/Text" },
        "url": { "$ref": "jsonld-shared.defs.json#/definitions/URL" },
        "address": {
          "oneOf": [
            { "type": "string", "minLength": 1 },
            {
              "type": "object",
              "properties": {
                "@type": { "const": "PostalAddress" },
                "streetAddress": { "type": "string" },
                "addressLocality": { "type": "string" },
                "addressRegion": { "type": "string" },
                "postalCode": { "type": "string" },
                "addressCountry": { "type": "string" }
              },
              "additionalProperties": true
            }
          ]
        }
      },
      "additionalProperties": true
    },
    "offers": {
      "type": "object",
      "required": ["@type", "price", "priceCurrency", "availability", "url", "validFrom"],
      "properties": {
        "@type": { "const": "Offer" },
        "price": {
          "oneOf": [
            { "type": "number" },
            { "type": "string", "pattern": "^[0-9]+(\\.[0-9]{1,2})?$" }
          ]
        },
        "priceCurrency": { "type": "string", "minLength": 3, "maxLength": 3 },
        "availability": { "type": "string" },
        "url": { "$ref": "jsonld-shared.defs.json#/definitions/URL" },
        "validFrom": {
          "description": "MUST equal or precede startDate",
          "oneOf": [
            { "$ref": "jsonld-shared.defs.json#/definitions/DateTime" },
            { "$ref": "jsonld-shared.defs.json#/definitions/Date" }
          ]
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
